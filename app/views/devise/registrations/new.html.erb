<head>
  <style>
    .form-group {
       text-align:center;
      background-color:#00bfff;
      border:2px solid #660066;
      border-radius:10px 40px;
      
    }
    
  </style>
</head>
<div class="panel panel-default widget">
<div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :name,placeholder:"İsminiz" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true,placeholder:"Email Adresiniz" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",placeholder:"Şifre" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"Şifre Tekrar" %>
  </div>

  <div class="form-group">
    <div>
    <%= f.file_field :image %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Kayıt",placeholder:"İsminiz" %>
  </div>
<% end %>
</div>
</div>
<%= render "devise/shared/links" %>
